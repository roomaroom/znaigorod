<%= render :partial => 'winners_video' %>

<% if @works.any? %>
    <h2>Участники (<%= @contest.works.count %>)</h2>
    <div class="presentation_filters work">
      <div class='order_by'>
        <p>Сортировать по:</p>
        <ul>
          <li<%= " class=selected" if order_by(@contest) == "by_id" %>><%= link_to "Обновлению", contest_path(params[:id], order_by: 'by_id')  %></li>
          <li<%= " class=selected" if order_by(@contest) == "by_sms_counter" %>><%= link_to "Голосам", contest_path(params[:id], order_by: @contest.vote_sort_value)  %></li>
        </ul>
      </div>
    </div>
    <div style="clear:both"> </div>
    <div class='works ajaxed_voteable js-button-pagination video_works'>
    <ul class='js-paginable-list'>
      <%= render :partial => 'works/contest_list', :locals => { :width => 350, :height => 200 } %>
    </ul>
  </div>
<% end %>
