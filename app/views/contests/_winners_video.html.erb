<% if @contest.ends_at <= Time.zone.now %>
  <div class='winners'>
    <h2>Победители</h2>
    <ul>
      <li>
        <div class='title gold'>Первое место</div>
        <div class='image'>
          <%= link_to image_tag(resized_image_url(@winners[0].image_url, 350, 200,
                                options = { :crop => '!', :magnify => 'm', :orientation => '' }) , :size => "350x200"),
            [@winners[0].context, @winners[0].becomes(Work)],
            :class => 'js-video-preview',
            :data => { :video => { :src => @winners[0].content_parser.videos.first.src, :width => '700' } } %>
        </div>
        <div class='contest_work_vk_like_on_list'><%= t 'work.sms', :count => @winners[0].sms_counter %></div>
      </li>
      <li>
        <div class='title silver'>Второе место</div>
