<% content_for :stylesheets do %>
  <%= stylesheet_link_tag    "manage/application", :media => "all" %>
<% end %>

<% content_for :javascripts do %>
  <%= javascript_include_tag "manage/application" %>
<% end %>

<% content_for :content do  %>
  <body style='padding-top: 60px'>
    <div class="container-fluid">
      <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
          <div class="container-fluid">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </a>
            <a class="brand" href="/">ЗнайГород</a>
            <div class="nav-collapse">
              <ul class="nav">
                <li><%= link_to "Список организаций", manage_organizations_path %></li>
                <li><%= link_to "Добавить организацию", new_manage_organization_path %></li>
                <li><%= link_to "Список мероприятий", manage_affiches_path %></li>
                <li><%= link_to "Добавить мероприятие", new_manage_affiche_path %></li>
              </ul>
            </div>

            <%= form_tag send("manage_#{search_class(resource_class).name.downcase.pluralize}_path"), :method => :get, :class => 'navbar-search pull-right' do %>
              <%= text_field_tag 'q', params[:q], :placeholder => 'Поиск', :class => 'search-query span2' %>
              <div>
                <%= label_tag 'include_gone', 'Включая прошедшие', :style => 'color: white; float: left' %>
                <%= check_box_tag 'include_gone', '1', params[:include_gone] %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <%= yield %>

    </div>
  </body>
<% end %>

<%= render :file => 'layouts/base' %>
