<div class="account_show">
  <div class="left">
    <div class="image">
      <%= image_tag(resized_image_url(@account.avatar.url, 200, 200), size: '200x200', title: @account.title, alt: @account.title) %>
      <%= render 'avatar_form' %>
    </div>
    <h1><%= @account.title %></h1>
    <div class="properties">
      <%= link_to t("edit_profile"), my_edit_path %>
    </div>

    <div class="social_actions">
      <% if @friends.any? %>
        <div class="friends_counter">
          <div class="floatl">Друзья</div>
          <div class="floatr"><%= t('account_friends', count: @friends.total_count) %></div>
        </div>
        <div class="friends list">
          <%= render partial: 'friends/account_friends', locals: { collection: @friends } %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="right">
    <%= render 'messages' if @notification_messages.any? || @dialogs.any? || @invite_messages.any? %>
    <%= render 'accounts/events' %>

    <h3>Приглашаю</h3>
    <%= link_to 'добавить', new_my_invitation_path('invitation[kind]' => :inviter) %>
    <% if @account.invitations.inviter.any? %>
      <ul>
        <% @account.invitations.inviter.each do |invitation| %>
          <li>
            <%= invitation.gender_text %>
            <% invitation.categories.each do |category| %>
              <%= link_to category %>
            <% end %>
            <%= invitation.description %>
            <%= link_to 'удалить', my_invitation_path(invitation), :method => :delete %>
          </li>
        <% end %>
      </ul>
    <% end %>

    <h3>Жду приглашения</h3>
    <%= link_to 'добавить', new_my_invitation_path('invitation[kind]' => :invited) %>
    <% if @account.invitations.invited.any? %>
      <ul>
        <% @account.invitations.invited.each do |invitation| %>
          <li>
            <%= invitation.gender_text %>
            <% invitation.categories.each do |category| %>
              <%= link_to category %>
            <% end %>
            <%= invitation.description %>
            <%= link_to 'удалить', my_invitation_path(invitation), :method => :delete %>
          </li>
        <% end %>
      </ul>
    <% end %>

    <% if @visits.any? %>
      <div class="visits header">
        <%= t "account.want_to_visit.#{@account.gender}" %>
      </div>
      <div class="visits list">
        <%= render 'accounts/visits' %>
      </div>
    <% end %>

    <% if @votes.any? %>
      <div class="votes header">
        Нравится
      </div>
      <div class="votes list">
        <%= render 'accounts/votes' %>
      </div>
    <% end %>

    <% if @comments.any? %>
      <div class="comments header">
        Комментарии
      </div>
      <div class="comments list">
        <%= render 'accounts/comments' %>
      </div>
    <% end %>

  </div>
</div>
