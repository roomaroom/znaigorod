<% @presenter.organization_for_saunas_without_halls.each do |organization| %>
  <li class='list_view_organization_item js-organization-item' data-longitude="<%= organization.longitude %>" data-latitude="<%= organization.latitude %>"
    data-image="<%= organization.logotype_url %>" data-icon="<%= asset_path('/assets/public/organizations_list_view/not_client_icon.png') %>"
    data-icon-hover="<%= asset_path('/assets/public/organizations_list_view/not_client_icon_hover.png') %>" data-slug="<%= organization.slug %>"
    data-width='9' data-height='9' data-status = '<%= organization.status %>'>
    <div class="list_view_organization_poster">
      <div class="info">
        <!-- информация о заведении -->
        <h1>
          <%= link_to organization.title.truncate(30), organization_path(organization) %>
          <%= content_tag :span,'' , :title => "#{organization.work_schedule_for_list_view}".html_safe,
            :class => (!organization.schedules.first.holiday? || organization.work_schedule_for_list_view == 'Гибкий график работы') ? 'show_tipsy open' : 'show_tipsy close' %>
        </h1>
        <!-- адрес -->
        <%= content_tag(:div, "#{organization.address_without_link}".html_safe, class: :place) if organization.address_link.present? %>
      </div>
    </div>
  </li>
<% end %>
