<div class="cloud_wrapper">
  <div class="cloud_inner_wrapper">
    <h4>Пожалуйста, войдите с помощью одной из социальных сетей:</h4>
    <ul class='social_signin_links <%= defined?(no_js) ? 'no_js' : 'auth_links' %>'>
      <li class='vkontakte'>
        <%= link_to 'ВКонтакте', user_omniauth_authorize_url(:vkontakte, subdomain: false), :title => 'Войти с помощью ВКонтакте', :rel => 'nofollow' %>
      </li>
      <li class='yandex'>
        <%= link_to 'Яндекс', user_omniauth_authorize_url(:yandex, subdomain: false), :title => 'Войти с помощью Яндекс', :rel => 'nofollow' %>
      </li>
      <li class='facebook'>
        <%= link_to 'Facebook', user_omniauth_authorize_url(:facebook, subdomain: false), :title => 'Войти с помощью Facebook', :rel => 'nofollow' %>
      </li>
      <li class='twitter'>
        <%= link_to 'Twitter', user_omniauth_authorize_url(:twitter, subdomain: false), :title => 'Войти с помощью Twitter', :rel => 'nofollow' %>
      </li>
      <li class='google'>
        <%= link_to 'Google', user_omniauth_authorize_url(:google_oauth2, subdomain: false), :title => 'Войти с помощью Google', :rel => 'nofollow' %>
      </li>
      <li class='mail_ru'>
        <%= link_to 'Mail.Ru', user_omniauth_authorize_url(:mailru, subdomain: false), :title => 'Войти с помощью Mail.Ru', :rel => 'nofollow' %>
      </li>
      <li class='odnoklassniki'>
        <%= link_to 'Одноклассники', user_omniauth_authorize_url(:odnoklassniki, subdomain: false), :title => 'Войти с помощью Одноклассники', :rel => 'nofollow' %>
      </li>
    </ul>
  </div>
</div>
