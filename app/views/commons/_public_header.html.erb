<div class='header_wrapper'>
  <div class='header'>
    <div class='logo'><%= link_to t('meta.default.title'), root_url(subdomain: false) %></div>
    <div class='tomsk'>Томск</div>

    <a href='/webcams' title='Веб камеры Томска' class='webcams'>
      Веб камеры
      <span class="webcam-icon"></span>
    </a>

    <!--noindex-->
    <div class='dashboard'>
      <% if user_signed_in? %>
        <div class='user'>
          <div class="more_button">
            <%= link_to 'Меню', '#', class: 'my_new_action js-more-button', :rel => 'nofollow' %>
            <div class="hidden_more_buttons">
              <%= link_to 'Задать вопрос', new_my_question_path, class: :my_new_action, :rel => 'nofollow' %>
              <%= link_to 'Добавить обзор', add_my_reviews_path, class: :my_new_action, :rel => 'nofollow' %>
              <%= link_to 'Добавить скидку', help_my_discounts_path, class: :my_new_action, :rel => 'nofollow' %>
              <%= link_to 'Добавить афишу', new_my_afisha_path, class: :my_new_action, :rel => 'nofollow' %>
            </div>
          </div>

          <%= link_to account_url(current_user.account, subdomain: false), target: :_blank, class: :avatar do %>
            <%= image_tag(resized_image_url(current_user.account.avatar.url, 22, 22), size: '22x22', title: current_user.account, alt: current_user.account) %>
          <% end %>
          <%= link_to(current_user.account, my_root_url(subdomain: false), class: :user_name) %>
          <%= link_to('Выйти', destroy_user_session_url(subdomain: false), method: :delete, class: :sign_out) %>
        </div>
        <p class='private'><%= link_to('Личный кабинет', my_root_url(subdomain: false)) %></p>
        <p class='messages'>
          <% if current_user.account.private_messages.unread.any? %>
            <%= link_to "+#{current_user.account.messages.unread.count}", my_dialogs_url(subdomain: false), class: :new, title: 'Есть новые сообщения' %>
          <% elsif current_user.account.notification_messages.unread.any? %>
            <%= link_to "+#{current_user.account.messages.unread.count}", my_notification_messages_url(subdomain: false), class: :new, title: 'Есть новые сообщения' %>
          <% else %>
            <%= link_to current_user.account.messages.count, my_root_url(subdomain: false), class: :empty, title: 'Нет новых сообщений' %>
          <% end %>
        </p>
      <% else %>
        <%= link_to 'Добавить обзор', add_my_reviews_url(subdomain: false), class: :my_new_action %>
        <%= link_to 'Добавить скидку', help_my_discounts_url(subdomain: false), class: :my_new_action %>
        <%= link_to 'Добавить афишу', new_my_afisha_url(subdomain: false), class: :my_new_action %>
        <span class='sign_in'>Войти:</span>
        <%= render :partial => 'commons/social_auth' %>
      <% end %>
    </div>
    <!--/noindex-->

    <%= render :partial => 'commons/public_menu' %>
  </div>
</div>

<%= render :partial => 'filters' %>
