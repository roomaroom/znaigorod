<% content_for :organization_content do  %>
  <div class="info">
    <div class="clearfix">

      <% if @organization.has_tour? %>
        <div class="virtual_tour">
          <%= link_to('#', :class => :virtual_tour_link, :'data-link' => @organization.virtual_tour.link, title: '3D-тур') do %>
            <% if @organization.virtual_tour.attachment_url? %>
              <%= image_tag_for(@organization.virtual_tour.attachment_url, 334, 164, true, 'n') %>
              <span>3D<br />тур</span>
            <% else %>
              <%= image_tag "public/virtual_tour_link.png" %>
            <% end %>
          <% end %>
        </div>
      <% end %>

      <%= @organization.iconize_info %>
      <h1><%= @organization.title %></h1>
      <%= content_tag(:div, link_to(image_tag_for(@organization.logotype_url, 130, 130), @organization.logotype_url), class: :image) if @organization.logotype_url? %>
      <%= render :partial => 'user_ratings/block', :locals => { :parent_obj => @organization } %>
      <%= content_tag(:div, @organization.address_link + @organization.office, class: :place) if  @organization.address_link.present? %>
      <%= @organization.work_schedule %>
      <%= content_tag(:div, @organization.phone, class: :phone) if @organization.phone.present? %>
      <%= content_tag(:div, @organization.contact_links, class: :links) if @organization.contact_links.present? %>

      <% if @organization.social_links.present? %>
        <ul class='social_links'>
          <% @organization.social_links.each do |link| %>
            <li><%= link_to link.title, link.url, :target => '_blank' %></li>
          <% end %>
        </ul>
      <% end %>
      <ul class="categories">
        <li class='title'>Категории:</li>
        <%= @organization.category_links.map { |link| content_tag :li, link }.join.mb_chars.downcase.html_safe %>
      </ul>
    </div>
    <% if @organization.description.present? %>
      <div class='description'>
        <%= @organization.description.as_html %>
      </div>
    <% end %>
    <% if @organization.has_photogallery? %>
      <div class="photogallery">
        <ul>
          <% @organization.images.each do |image| %>
            <li><%= link_to(image_tag_for(image.url, 124, 94, true, 'n'), image.url, rel: :info_gallery) %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <% @organization.decorated_suborganizations.each do |suborganization| %>
    <%= render suborganization if suborganization.viewable? %>
  <% end %>

  <% if @presenter.collection.any? %>
    <div class='suborganization_info affiches_details'>
      <table>
        <tr>
          <td class='border'>
            <h1>Афиша</h1>
          </td>
          <td>
            <div class="details">
              &nbsp;
            </div>
          </td>
        </tr>
      </table>
      <div class="affiches_list">
        <div class="list_settings">
          <div class="sort">
            <p>Сортировка:</p>
            <ul>
              <li>
                <%= link_to t('affiche.sort.popularity'),
                  organization_path(@organization, { :order_by => 'popularity' }),
                  @presenter.sort_by_popularity? ? { class: 'selected' } : {} %>
              </li>
              <li><span class="separator">&nbsp;</span></li>
              <li>
                <%= link_to t('affiche.sort.creation'),
                  organization_path(@organization, { :order_by => 'creation' }),
                  @presenter.sort_by_creation? ? { class: 'selected' } : {} %>
              </li>
              <li><span class="separator">&nbsp;</span></li>
              <li>
                <%= link_to t('affiche.sort.starts_at'),
                  organization_path(@organization, { :order_by => 'starts_at' }),
                  @presenter.sort_by_starts_at? ? { class: 'selected' } : {} %>
              </li>
            </ul>
          </div>
        </div>
        <ul class="items_list posters">
          <%= render partial: @presenter.partial %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="share_organization">
    <%= render :partial => "commons/share_this" %>
  </div>

  <%= render :partial => 'comments/block', :locals => { :parent_obj => @organization } %>

<% end %>
<%= render :file => "organizations/wrapper" %>
