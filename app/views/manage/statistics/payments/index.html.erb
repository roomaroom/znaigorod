<h1>Платежи</h1>

<table class='payments'>
  <thead>
    <tr>
      <th>ID</th>
      <th>Сумма</th>
      <th class="phone">Номер телефона</th>
      <th>Назначение</th>
      <th>Статус</th>
      <th>Дата</th>
    </tr>
  </thead>
  <tbody>
    <% @payments.each do |payment| %>
      <%= render :partial => "manage/statistics/payments/#{payment.class.name.underscore}", :locals => { :payment => payment } %>
    <% end %>
  </tbody>
</table>

<%= paginate @payments %>
