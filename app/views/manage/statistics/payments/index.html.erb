<h1>Платежи</h1>

<%= link_to 'Все', manage_statistics_payments_path(:order_by => 'every') %>
<%= link_to 'Подтвержден', manage_statistics_payments_path(:order_by => 'approved') %>
<%= link_to 'Отменен', manage_statistics_payments_path(:order_by => 'canceled') %>
<%= link_to 'Ожидается', manage_statistics_payments_path(:order_by => 'pending') %>

<table class='payments'>
  <thead>
    <tr>
      <th>ID</th>
      <th>Сумма</th>
      <th class="phone">Номер телефона</th>
      <th class="phone">Email</th>
      <th>Назначение</th>
      <th>Статус</th>
      <th>Дата</th>
    </tr>
  </thead>
  <tbody>
    <% @payments.each do |payment| %>
      <%= render :partial => "manage/statistics/payments/#{payment.class.name.underscore}", :locals => { :payment => payment } %>
    <% end %>
  </tbody>
</table>

<%= paginate @payments %>
