<%= javascript_include_tag 'esp-ckeditor/application' %>
<%= javascript_include_tag 'manage/info_plugin/info_plugin' %>

<div class='form_view'>
  <%= simple_form_for @contest,:url => [:manage, @contest], :html => { :novalidate => true }  do |f| %>
    <%= f.input :vfs_path, :as => :hidden, :input_html => { :id => 'vfs_path' } %>
    <%= f.input :title %>
    <%= f.input :description, :as => :ckeditor, :label => false %>
    <%= f.input :contest_type %>
    <%= f.input :vote_type %>
    <%= f.input :short_number %>
    <%= f.input :sms_prefix %>
    <%= f.input :starts_at, :as => :string, :as => :datetime_picker %>
    <%= f.input :participation_ends_at, :as => :string, :as => :datetime_picker %>
    <%= f.input :ends_at, :as => :string, :as => :datetime_picker %>
    <%= f.input :agreement %>
    <%= f.input :og_description %>

    <div class="actions">
      <%= link_to "&larr; Назад".html_safe, :back %>
      <%= f.submit 'Сохранить' %>
      <%= link_to 'Удалить'.html_safe, resource_path, method: :delete, confirm: 'Уверены что хотите удалить?', class: :destroy unless resource.new_record? %>
    </div>
  <% end %>
</div>
