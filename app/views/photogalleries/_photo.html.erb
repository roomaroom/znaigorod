<% if photogallery.works.any? %>
  <ul class="images">
    <% if photogallery.works.count > 5 %>
      <% photogallery.works.ordered_by_id.limit(6).each_with_index do |work, index| %>
        <li>
          <% if controller_path == 'works' || controller_path == 'reviews' %>
            <% if index == 0 %>
              <%= link_to image_tag(resized_image_url(work.image_url, 141, 81)), photogallery_path(photogallery) %>
            <% else %>
              <%= link_to image_tag(resized_image_url(work.image_url, 70, 40)), photogallery_path(photogallery) %>
            <% end %>
            <% break if index > 4 %>
          <% else %>
            <% if index == 0 %>
              <%= link_to image_tag(resized_image_url(work.image_url, 234, 158)), photogallery_path(photogallery) %>
            <% else %>
              <%= link_to image_tag(resized_image_url(work.image_url, 116, 78)), photogallery_path(photogallery) %>
            <% end %>
            <% break if index > 4 %>
          <% end %>
        </li>
      <% end %>
      <span class="counter fa fa-camera"> <%= photogallery.works.size %></span>
    <% else %>
      <%= link_to image_tag(resized_image_url(photogallery.works.ordered_by_id.first.image_url, width, height)), photogallery_path(photogallery) %>
    <% end %>
  </ul>
<% else %>
  <%= raw photogallery.description.truncate(255) %>
<% end %>
